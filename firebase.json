{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/login.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "port": "8080"
    },
    "ui": {
      "enabled": false,
      "port": "4000"
    },
    "auth": {
      "port": "9099"
    },
    "functions": {
      "port": "5002"
    },
    "database": {
      "port": "9000"
    },
    "pubsub": {
      "port": "8085"
    },
    "hosting": {
      "port": "5000"
    }
  }
}
